<br>

  <h3><%= @user.name %></h3>
<div class="container">

  <div class="dropdown-container" style="display:inline-block" width="50%">
    <ul class="dropdown">
    <li>
      <h3>Lista de canciones</h3>
    </li>
    <% @user.songs.each do |fav| %>
      <%if fav.preview %> <!-- Solo las canciones que tengan enlace de preview>-->
        <li class ="hide" >
          <span><%= fav.name %></span>
          <span><%= fav.artist %></span>
          <audio controls id='<%= fav.name %>' src="<%= fav.preview %>"></audio>
        </li>
        <% end %>
    <% end %>
    </ul>
  </div>

  <div class="right" style="display:inline-block" width="25%">
    <a href="javascript:void(0)">
      <i class="glyphicon glyphicon-chevron-right"></i>
    </a>
  </div>

</div>

